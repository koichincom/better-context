{
	"name": "btca",
	"author": "Ben Davis",
	"version": "0.4.1",
	"description": "CLI tool for asking questions about technologies using OpenCode",
	"type": "module",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/bmdavis419/better-context"
	},
	"keywords": [
		"cli",
		"ai",
		"docs"
	],
	"engines": {
		"bun": ">=1.1.0"
	},
	"bin": {
		"btca": "./bin.js"
	},
	"files": [
		"bin.js",
		"dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "bun run scripts/build.ts",
		"build:targets": "bun run scripts/build-binaries.ts",
		"setup:platforms": "bun install --cpu=x64 --os=darwin && bun install --cpu=x64 --os=linux && bun install --cpu=arm64 --os=linux && bun install --cpu=x64 --os=win32",
		"build:artifacts": "bun run setup:platforms && bun run build && bun run build:targets",
		"prepublishOnly": "bun run build:artifacts",
		"check": "tsgo --noEmit",
		"prepare": "effect-language-service patch"
	},
	"devDependencies": {
		"@effect/cli": "^0.72.1",
		"@effect/language-service": "^0.62.1",
		"@effect/platform": "^0.93.5",
		"@effect/platform-bun": "^0.85.0",
		"@effect/printer": "^0.47.0",
		"@effect/printer-ansi": "^0.47.0",
		"@effect/typeclass": "^0.38.0",
		"@opencode-ai/sdk": "^1.0.119",
		"@types/bun": "latest",
		"@types/react": "^19.2.7",
		"effect": "^3.19.8",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@opentui/core": "^0.1.60",
		"@opentui/react": "^0.1.60",
		"react": "^19.2.3"
	}
}
